{
  "name": "roosevelt-ops",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > lib/database.types.ts",
    "db:migrate": "supabase db push",
    "db:diff": "supabase db diff -f",
    "db:reset": "supabase db reset",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project roosevelt-ops ./.next",
    "tunnel": "ngrok http 3000",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:autorun": "lhci autorun",
    "perf": "npm run lhci:autorun",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write ."
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@rooseveltops/analytics-layer": "file:../../shared/analytics-layer",
    "@sentry/nextjs": "^10.38.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@tremor/react": "^3.18.3",
    "@vercel/otel": "^2.1.0",
    "date-fns": "^4.1.0",
    "next": "14.2.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@lhci/cli": "^0.15.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
