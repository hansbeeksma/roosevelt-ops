# Roosevelt OPS Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# Incident Management - Slack Bot
# ============================================================================
# Get these from: https://api.slack.com/apps → Your App → OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# Get from: Basic Information → App Credentials → Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here
# Get from: Workspace Settings → Copy Team ID (e.g., T01234567)
SLACK_TEAM_ID=T01234567

# ============================================================================
# Incident Management - PagerDuty Integration (Optional)
# ============================================================================
# Get from: PagerDuty → Integrations → API Access Keys
PAGERDUTY_API_KEY=your-pagerduty-api-key
# Get from: PagerDuty → Services → Your Service → Integrations → Events API V2
PAGERDUTY_ROUTING_KEY=your-routing-key

# ============================================================================
# Incident Management - Status Page Integration (Optional)
# ============================================================================
# For Statuspage.io: https://manage.statuspage.io/account/api_keys
STATUSPAGE_API_KEY=your-statuspage-api-key
STATUSPAGE_PAGE_ID=your-page-id

# ============================================================================
# Incident Management - Plane Integration (Optional)
# ============================================================================
# Auto-create Plane issues when incidents start
# Get from: https://app.plane.so/profile/api-tokens
PLANE_API_KEY=your-plane-api-key
PLANE_WORKSPACE_SLUG=rooseveltdigital
PLANE_PROJECT_ID=c7d0b955-a97f-40b6-be03-7c05c2d0b1c3

# ============================================================================
# Observability - Sentry
# ============================================================================
# Get from: https://sentry.io/settings/your-org/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-auth-token

# ============================================================================
# Observability - Grafana Cloud (Optional - ROOSE-30)
# ============================================================================
# Get from: Grafana Cloud → Connections → Add new connection
GRAFANA_CLOUD_OTLP_ENDPOINT=https://otlp-gateway-prod-eu-west-0.grafana.net/otlp
GRAFANA_CLOUD_OTLP_HEADERS=Authorization=Basic <base64-encoded-credentials>
GRAFANA_CLOUD_INSTANCE_ID=your-instance-id

# ============================================================================
# Analytics (Optional)
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_your-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# A/B Testing (ROOSE-37.13)
# ============================================================================
# Enable A/B testing experiments for performance optimization impact measurement
# Set to 'true' to activate experiments, 'false' to always use optimized version
NEXT_PUBLIC_AB_TEST_ENABLED=true

# ============================================================================
# Development & Testing
# ============================================================================
# Node environment
NODE_ENV=development

# Database URL (for Prisma/local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ngrok URL (for local Slack webhook testing)
NGROK_URL=https://your-ngrok-url.ngrok.io
